{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2016",
    "allowJs": true,
    "experimentalDecorators": true, // Ajouté pour cohérence
    "emitDecoratorMetadata": true  // Ajouté pour cohérence
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}